{
  "apps": [
      {
          "name": "chanyue-cms", 
          "script": "app.js",
          "cwd": "./", 
          "watch": [  
              "app"
          ],  
          "ignore_watch": [  
              "app/public"
          ],
          "log_date_format": "YYYY-MM-DD HH:mm:ss",
          "error_file": "./logs/pm2-err.log",
          "out_file": "./logs/pm2-out.log",
          "merge_logs": true,
          "exec_mode": "fork",
          "min_uptime":"60s",
          "max_restarts": 30, 
          "max_memory_restart": "100M",
          "restart_delay": 3000,
          "autorestart": true,
          "node_args": [],
          "args": [],
          "env": {
              "EGG_SERVER_ENV": "prd",
              "NODE_ENV": "prd"
          },
          "instances": 1,
          "cron_restart": "0 0 * * *",
          "watch_delay": 1000,
          "stop_exit_codes": [0],
          "exp_backoff_restart_delay": 2000
      }
  ]
}